                        "description": "The number of results that will be returned per page.",
                        "schema": {
                            "type": "integer",
                            "default": 10
                        }
                    },
                    {
                        "name": "page[number]",
                        "in": "query",
                        "description": "The page number to start the pagination from.",
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "filter[status]",
                        "in": "query",
