    "components": {
        "securitySchemes": {
            "http": {
                "type": "http",
                "scheme": "bearer"
            }
        },
        "schemas": {
            "CheckResource": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "description": "The check ID."
                    },
                    "result": {
                        "description": "The result of the check.",
                        "$ref": "#/components/schemas/CheckResult"
                    },
                    "created_at": {
                        "type": [
                            "string",
                            "null"
                        ],
                        "format": "date-time",
                        "description": "ISO 8601 formatted date-time."
                    }
                },
                "required": [
                    "id",
                    "result",
                    "created_at"
                ],
                "title": "CheckResource"
            },
            "CheckResult": {
                "type": "string",
                "enum": [
                    "uncompromised",
                    "compromised"
                ],
                "title": "CheckResult"
            },
            "StoreCheckRequest": {
                "type": "object",
                "properties": {
                    "business_name": {
                        "type": "string",
                        "description": "The business name.",
                        "maxLength": 255
                    },
                    "business_phone": {
                        "type": [
                            "string",
                            "null"
                        ],
                        "description": "The business phone number.",
                        "maxLength": 255
                    },
                    "contact_name": {
                        "type": "string",
                        "description": "The authorised contact's name. There must be a space between the first name(s) and last name, such as \"John Michael Doe\".",
                        "maxLength": 255
                    },
                    "contact_mobile": {
                        "type": "string",
                        "description": "The authorised contact's Australian mobile number."
                    },
                    "account_abn": {
                        "type": "string",
                        "description": "A valid 11-digit ABN."
                    },
                    "account_name": {
                        "type": "string",
                        "description": "The bank account name.",
                        "maxLength": 255
                    },
                    "account_bsb": {
                        "type": "string",
                        "description": "A valid 6-digit BSB."
                    },
                    "account_number": {
                        "type": "string",
                        "description": "A valid 6-10-digit account number."
                    }
                },
                "required": [
                    "business_name",
                    "contact_name",
                    "contact_mobile",
                    "account_abn",
                    "account_name",
                    "account_bsb",
                    "account_number"
                ],
                "title": "StoreCheckRequest"
            },
            "StoreVerificationRequest": {
                "type": "object",
                "properties": {
                    "business_name": {
                        "type": "string",
                        "description": "The business name.",
                        "maxLength": 255
                    },
                    "business_phone": {
                        "type": [
                            "string",
                            "null"
                        ],
                        "description": "The business phone number.",
                        "maxLength": 255
                    },
                    "contact_name": {
                        "type": "string",
                        "description": "The authorised contact's name. There must be a space between the first name(s) and last name, such as \"John Michael Doe\".",
                        "maxLength": 255
                    },
                    "contact_mobile": {
                        "type": "string",
                        "description": "The authorised contact's Australian mobile number."
                    },
                    "account_abn": {
                        "type": "string",
                        "description": "A valid 11-digit ABN."
                    },
                    "account_name": {
                        "type": "string",
                        "description": "The bank account name.",
                        "maxLength": 255
                    },
                    "account_bsb": {
                        "type": "string",
                        "description": "A valid 6-digit BSB."
                    },
                    "account_number": {
                        "type": "string",
                        "description": "A valid 6-10-digit account number."
                    },
                    "attribution_id": {
                        "type": [
                            "string",
                            "null"
                        ],
                        "description": "An attribution ID. Used to group related verifications.",
                        "maxLength": 255
                    }
                },
                "required": [
                    "business_name",
                    "contact_name",
                    "contact_mobile",
                    "account_abn",
                    "account_name",
                    "account_bsb",
                    "account_number"
                ],
                "title": "StoreVerificationRequest"
            },
            "VerificationResource": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "description": "The verification ID."
                    },
                    "status": {
                        "description": "The current status of the verification.",
                        "$ref": "#/components/schemas/VerificationStatus"
                    },
                    "checks": {
                        "type": "array",
                        "description": "The checks performed during the verification.",
                        "items": {
                            "type": "object",
                            "properties": {
                                "label": {
                                    "type": "string"
                                },
                                "result": {
                                    "type": "boolean"
                                }
                            },
                            "required": [
                                "label",
                                "result"
                            ]
                        }
                    },
                    "attribution_id": {
                        "type": [
                            "string",
                            "null"
                        ],
                        "description": "The attribution ID optionally provided upon creation."
                    },
                    "created_at": {
                        "type": [
                            "string",
                            "null"
                        ],
                        "format": "date-time",
                        "description": "ISO 8601 formatted date-time."
                    },
                    "updated_at": {
                        "type": [
                            "string",
                            "null"
                        ],
                        "format": "date-time",
                        "description": "ISO 8601 formatted date-time."
                    }
                },
                "required": [
                    "id",
                    "status",
                    "checks",
                    "attribution_id",
                    "created_at",
                    "updated_at"
                ],
                "title": "VerificationResource"
            },
            "VerificationStatus": {
                "type": "string",
                "enum": [
                    "created",
                    "pending",
                    "verified",
                    "rejected",
                    "failed",
                    "cancelled",
                    "expired",
                    "error"
                ],
                "title": "VerificationStatus"
            }
        },
        "responses": {
            "AuthorizationException": {
                "description": "Authorization error",
                "content": {
                    "application/json": {
                        "schema": {
                            "type": "object",
                            "properties": {
                                "message": {
                                    "type": "string",
                                    "description": "Error overview."
                                }
                            },
                            "required": [
                                "message"
                            ]
                        }
                    }
                }
            },
            "AuthenticationException": {
                "description": "Unauthenticated",
                "content": {
                    "application/json": {
                        "schema": {
                            "type": "object",
                            "properties": {
                                "message": {
                                    "type": "string",
                                    "description": "Error overview."
                                }
                            },
